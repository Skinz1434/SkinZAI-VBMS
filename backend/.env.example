# NOVA QBit Backend Configuration
# Copy this file to .env and update with your values

# Application
APP_NAME="NOVA QBit"
VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=false

# Security
SECRET_KEY="your-secret-key-min-32-chars-generate-with-openssl-rand-hex-32"
JWT_SECRET_KEY="your-jwt-secret-key-min-32-chars-generate-with-openssl-rand-hex-32"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost/nova_qbit"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""
REDIS_SSL=false
REDIS_POOL_SIZE=10

# OpenAI (Optional - for enhanced AI capabilities)
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4-turbo-preview"
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# CORS
CORS_ORIGINS=["http://localhost:3000", "https://nova.va.gov"]
ALLOWED_HOSTS=["localhost", "127.0.0.1", "nova.va.gov"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"
LOG_FILE="logs/qbit.log"

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true
SENTRY_DSN=""