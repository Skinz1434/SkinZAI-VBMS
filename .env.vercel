# Vercel Environment Variables
# Add these in Vercel Dashboard > Settings > Environment Variables

# Frontend URLs (Public - exposed to browser)
NEXT_PUBLIC_API_URL=/api/proxy
NEXT_PUBLIC_APP_NAME=SkinZAI VBMS
NEXT_PUBLIC_ENVIRONMENT=production

# Backend URLs (Server-side only)
API_URL=https://your-api-backend.railway.app
ML_API_URL=https://your-ml-backend.railway.app
AUTH_API_URL=https://your-auth-backend.railway.app

# Database (for server-side operations if needed)
DATABASE_URL=postgresql://user:password@host:port/database

# Object Storage (S3-compatible)
S3_ENDPOINT=https://your-account.r2.cloudflarestorage.com
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_BUCKET=efolder
S3_REGION=auto

# Authentication Keys
JWT_SECRET=your-jwt-secret-key-minimum-32-chars
NEXTAUTH_SECRET=your-nextauth-secret-key
NEXTAUTH_URL=https://your-app.vercel.app

# Optional: Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxxxxxxxxxx

# Optional: Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Feature Flags
NEXT_PUBLIC_ENABLE_OCR=true
NEXT_PUBLIC_ENABLE_ML=true
NEXT_PUBLIC_ENABLE_SEARCH=true